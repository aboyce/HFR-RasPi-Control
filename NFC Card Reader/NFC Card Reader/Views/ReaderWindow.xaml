<Window x:Name="NFC_Card_Reader" x:Class="NFC_Card_Reader.Views.ReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NFC Card Reader" Height="167" Width="305" Background="#FF5B5B5B" ResizeMode="NoResize">
    <Grid>
        <Button Content="Initialise" Command="{Binding InitialiseCommand}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="59" Height="22"/>
        <Button Content="Get Status" Command="{Binding GetStatusCommand}" HorizontalAlignment="Left" Margin="54,89,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Height="20" Grid.ColumnSpan="2"/>
        <ListBox ItemsSource="{Binding CardReaders}" HorizontalAlignment="Left" Height="49" Margin="83,10,0,0" VerticalAlignment="Top" Width="199" IsEnabled="False" Grid.ColumnSpan="2"/>
        <Button Content="Monitor" Command="{Binding MonitorCommand}" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="59" Height="22" IsEnabled="False"/>
        <Button Content="Read Card" Command="{Binding ReadCardCommand}" HorizontalAlignment="Left" Margin="153,89,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Height="20"/>
    </Grid>
</Window>
