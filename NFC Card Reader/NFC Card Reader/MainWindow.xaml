<Window x:Name="NFC_Card_Reader" x:Class="NFC_Card_Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="307*"/>
            <ColumnDefinition Width="210*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnStart" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="45" Click="BtnStart_Click" Height="22"/>
        <Button x:Name="BtnDisconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" Width="70" Height="22" Click="BtnDisconnect_Click" IsEnabled="False"/>
        <Button x:Name="BtnGetProtocol" Content="Get Protocol" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="77" Height="22" Click="BtnGetProtocol_Click" IsEnabled="False"/>

    </Grid>
</Window>
