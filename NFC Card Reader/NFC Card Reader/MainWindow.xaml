<Window x:Name="NFC_Card_Reader" x:Class="NFC_Card_Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NFC Card Reader" Height="167" Width="305">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="206*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnInitialise" Content="Initialise" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="59" Click="BtnInitialise_Click" Height="22"/>
        <Button x:Name="BtnGetStatus" Content="Get Status" HorizontalAlignment="Left" Margin="46,89,0,0" VerticalAlignment="Top" Width="75" Click="BtnGetStatus_Click" IsEnabled="False" Height="20" Grid.ColumnSpan="2"/>
        <ListBox x:Name="LbxReaders" HorizontalAlignment="Left" Height="49" Margin="83,10,0,0" VerticalAlignment="Top" Width="199" IsEnabled="False" SelectionChanged="LbxReaders_SelectionChanged" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnMonitor" Content="Monitor" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="59" Height="22" Click="BtnMonitor_Click" IsEnabled="False"/>
    </Grid>
</Window>
