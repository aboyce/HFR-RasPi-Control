<Window x:Class="WebServerSimulator.Views.WebServerSimulator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Web Server Simulator" Height="350" Width="290">
    <Grid>
        <Button Content="Start" Command="{Binding StartCommand}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Stop" Command="{Binding StopCommand}" HorizontalAlignment="Left" Margin="197,10,0,0" VerticalAlignment="Top" Width="75"/>
        <ListBox ItemsSource="{Binding LogMessages}" HorizontalAlignment="Left" Height="274" Margin="10,35,0,0" VerticalAlignment="Top" Width="262"/>
    </Grid>
</Window>
